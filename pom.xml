        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <bot_token/>
                <bot_username/>
                <chat_id/>      
                <admin_id/>
                <service_address/>
                <home_dir/>
                <users_mappings/>
                <door_token/>
                <namesdays_token/>
                <doorbell_token/>

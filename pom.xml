    <dependencies>
        <dependency>
            <groupId>org.telegram</groupId>
            <artifactId>telegrambots</artifactId>
            <version>5.0.1</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>jaxws-ri</artifactId>
            <version>2.3.0</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.8.0</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <configuration>
                    <mainClass>org.makeriga.tgbot.Main</mainClass>
                
                    <systemProperties>
                        <systemProperty>
                            <key>bot_token</key>
                            <value>${bot_token}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>bot_username</key>
                            <value>${bot_username}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>chat_id</key>
                            <value>${chat_id}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>admin_id</key>
                            <value>${admin_id}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>service_address</key>
                            <value>${service_address}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>home_dir</key>
                            <value>${home_dir}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>users_mappings</key>
                            <value>${users_mappings}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>door_token</key>
                            <value>${door_token}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>namesdays_token</key>
                            <value>${namesdays_token}</value>
                        </systemProperty>
                        <systemProperty>
                            <key>doorbell_token</key>
                            <value>${doorbell_token}</value>
                        </systemProperty>
                    </systemProperties>
                </configuration>
            
            </plugin>
        </plugins>
    </build>
</project>
